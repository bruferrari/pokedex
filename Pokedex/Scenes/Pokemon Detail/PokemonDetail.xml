<UIView
    backgroundColor="clear">
    <UIButton
    title="{string.pokemonDetail.btnLabel}"
    left="10"
    top="safeAreaInsets.top"
    outlet="closeButton"
    type="system"/>

    <UIScrollView
        backgroundColor="clear"
        contentInsetAdjustmentBehavior="never"
        contentInset="safeAreaInsets"
        scrollIndicatorInsets.top="safeAreaInsets.top"
        scrollIndicatorInsets.bottom="safeAreaInsets.bottom">

            <UIView
                clipsToBounds="false"
                width="50%"
                height="25%"
                layer.cornerRadius="width/2"
                layer.borderWidth="3"
                layer.borderColor="{rgb (227,227,227)}"
                center.x="parent.center.x"
                top="previous.bottom + 30"
                backgroundColor="white">

                <UIImageView
                    outlet="pokemonImage"
                    contentMode="scaleAspectFit"
                    backgroundColor="clear"
                    center.x="parent.center.x"
                    center.y="parent.center.y"
                    width="70%"
                    height="70%"/>
            </UIView>

            <UILabel
                text="{state.pokemon.name}"
                textColor="{rgb (60,89,165)}"
                center.x="parent.center.x"
                font="{theme.font.detailTitle}"
                top="previous.bottom + 20"/>

            <UILabel
                text="{state.pokemon.classification}"
                textColor="{rgb (74,74,74)}"
                center.x="parent.center.x"
                font="{theme.font.body} 12"
                top="previous.bottom + 2"/>

            <UIStackView
                alignment="center"
                axis="vertical"
                spacing="10"
                top="previous.bottom + 20"
                left="parent.left + 50">

                <UILabel
                text="{string.pokemonDetail.type}"
                textColor="{rgb (125,125,125)}"
                font="{theme.font.body} 14"/>

                <UILabel
                text="{state.pokemon.types[0]}"
                textColor="{rgb (20,106,138)}"
                font="{theme.font.body} 18"/>
            </UIStackView>

            <UIView
            top="previous.top"
            backgroundColor="white"
            height="50"
            width="1"
            left="previous.right + 30"
            right="44"/>

            <UIStackView
                alignment="center"
                axis="vertical"
                spacing="10"
                top="previous.top"
                center.x="parent.center.x">

                <UILabel
                text="{string.pokemonDetail.height}"
                textColor="{rgb (125,125,125)}"
                font="{theme.font.body} 14"/>

                <UILabel
                text="{state.pokemon.height.minimum}"
                textColor="{rgb (20,106,138)}"
                font="{theme.font.body} 18"/>
            </UIStackView>

            <UIView
            top="previous.top"
            backgroundColor="white"
            height="50"
            width="1"
            right="previous.right + 30"/>

            <UIStackView
                alignment="center"
                axis="vertical"
                spacing="10"
                top="previous.top"
                left="previous.left + 20">

                <UILabel
                text="{string.pokemonDetail.weight}"
                textColor="{rgb (125,125,125)}"
                font="{theme.font.body} 14"/>

                <UILabel
                text="{state.pokemon.weight.minimum}"
                textColor="{rgb (20,106,138)}"
                font="{theme.font.body} 18"/>
            </UIStackView>

            <UIView
            top="previous.bottom + 25"
            backgroundColor="white"
            height="1"
            width="75%"
            left="44"
            right="44"/>

            <UILabel
            text="{string.pokemonDetail.attacks}"
            textColor="{rgb (20,106,138)}"
            font="{theme.font.body} 12"
            top="previous.bottom + 20"
            center.x="parent.center.x"/>

            <UIView
                top="previous.bottom + 10"
                height="auto">
                <UILabel
                text="{string.pokemonDetail.fast}"
                textColor="{rgb (74,74,74)}"
                font="{theme.font.body} 12"
                left="50"/>

                <UICollectionView
                outlet="fastAttacksCollectionView"
                width="100%"
                height="auto"
                top="previous.bottom + 15"
                backgroundColor="clear"/>
            </UIView>

            <UIView
                top="previous.bottom + 20"
                height="auto">
                <UILabel
                text="{string.pokemonDetail.special}"
                textColor="{rgb (74,74,74)}"
                font="{theme.font.body} 12"
                left="50"/>

                <UICollectionView
                outlet="specialAttacksCollectionView"
                width="100%"
                height="auto"
                top="previous.bottom + 15"
                backgroundColor="clear"/>
            </UIView>

            <UIView
            top="previous.bottom + 20"
            backgroundColor="white"
            height="1"
            width="75%"
            left="44"
            right="44"/>

            <UILabel
            text="{string.pokemonDetail.evolutions}"
            textColor="{rgb (20,106,138)}"
            font="{theme.font.body} 12"
            top="previous.bottom + 20"
            center.x="parent.center.x"/>

            <UICollectionView
            outlet="evolutionsCollectionView"
            width="100%"
            height="auto"
            top="previous.bottom + 15"
            backgroundColor="clear"/>

            <UIView
            top="previous.bottom + 20"
            backgroundColor="white"
            height="1"
            width="75%"
            left="44"
            right="44"/>

            <UILabel
            text="{string.pokemonDetail.resistant}"
            textColor="{rgb (20,106,138)}"
            font="{theme.font.body} 12"
            top="previous.bottom + 20"
            center.x="parent.center.x"/>

            <UILabel
            text="{state.pokemon.resistant}"
            textColor="{rgb (145,145,145)}"
            font="{theme.font.body} 14"
            top="previous.bottom + 20"
            center.x="parent.center.x"/>

            <UIView
            top="previous.bottom + 20"
            backgroundColor="white"
            height="1"
            width="75%"
            left="44"
            right="44"/>

            <UILabel
            text="{string.pokemonDetail.weaknesess}"
            textColor="{rgb (20,106,138)}"
            font="{theme.font.body} 12"
            top="previous.bottom + 20"
            center.x="parent.center.x"/>

            <UILabel
            text="{state.pokemon.weaknesses}"
            textColor="{rgb (145,145,145)}"
            font="{theme.font.body} 14"
            top="previous.bottom + 20"
            center.x="parent.center.x"/>

            <UIView
            top="previous.bottom + 20"
            backgroundColor="white"
            height="2"
            width="75%"
            left="44"
            right="44"/>
    </UIScrollView>
</UIView>

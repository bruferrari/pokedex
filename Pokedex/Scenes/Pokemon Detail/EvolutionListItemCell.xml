<UICollectionViewCell
    reuseIdentifier="EvolutionListItem">
    
    <UIImageView
    id="imageView"
    contentMode="scaleAspectFit"
    width="60%"
    height="60%"
    center.x="parent.center.x"
    center.y="parent.center.y"
    backgroundColor="clear"/>

    <UILabel
    text="{evolution.name}"
    textColor="{rgb (145,145,145)}"
    font="{theme.font.body} 12"/>
</UICollectionViewCell>

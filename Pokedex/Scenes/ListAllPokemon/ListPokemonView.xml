<UIView top="safeAreaInsets.top" >
    <UIScrollView
        backgroundColor="clear"
        top="parent.top"
        bottom="parent.bottom">
        <UILabel
            text="{string.listAllPokemon.title}"
            font="{theme.font.title1}"
            textColor="{rgb (60,89,165)}"
            left="16"
            top="80"/>

        <UICollectionView
            outlet="collectionView"
            width="100%"
            top="120"
            contentInsetAdjustmentBehavior="never"
            contentInset.top="safeAreaInsets.top"
            contentInset.bottom="safeAreaInsets.bottom"
            scrollIndicatorInsets.top="safeAreaInsets.top"
            scrollIndicatorInsets.bottom="safeAreaInsets.bottom"
            backgroundColor="clear"/>
    </UIScrollView>

    <UIActivityIndicatorView
        top="safeAreaInsets.top + 8"
        center.x="parent.center.x"
        outlet="activityIndicator"
        activityIndicatorViewStyle="gray"
        hidesWhenStopped="true" />
</UIView>

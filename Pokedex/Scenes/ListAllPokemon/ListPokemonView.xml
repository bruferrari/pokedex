<UIView top="safeAreaInsets.top + 10" >
    <UILabel
    text="{string.listAllPokemon.title}"
    font="{theme.font.mainTitle}"
    textColor="{rgb (60,89,165)}"
    left="16"
    top="10"/>

    <UISearchBar
    outlet="searchBar"
    top="previous.bottom + 10"
    placeholder="{string.listAllPokemon.search.hint}"
    searchBarStyle="minimal"/>

    <UICollectionView
        outlet="collectionView"
        top="previous.bottom"
        width="100%"
        backgroundColor="clear"/>

    <UIActivityIndicatorView
        top="safeAreaInsets.top + 8"
        center.x="parent.center.x"
        center.y="parent.center.y"
        outlet="activityIndicator"
        activityIndicatorViewStyle="gray"
        hidesWhenStopped="true" />
</UIView>
